<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="360.0" prefWidth="480.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.managerandreminder.controllers.HelloController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>

  <Label fx:id="loginText" text="Task aplication" textAlignment="CENTER">
      <font>
         <Font name="Bell MT Italic" size="21.0" />
      </font>
  </Label>

    <TextField fx:id="inputUsername" promptText="Username" />
    <TextField fx:id="inputPassword" promptText="Password" />

  <Label fx:id="errorText" />
  <Button fx:id="loginButton" onAction="#onLogin" text="Log in" />
    <Button onAction="#onSignin" mnemonicParsing="false" text="Sign in" />
</VBox>
