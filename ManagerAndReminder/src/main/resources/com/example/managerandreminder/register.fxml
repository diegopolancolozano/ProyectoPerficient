<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="400.0" prefWidth="600.0" spacing="10.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.managerandreminder.controllers.registerController">

   <VBox.margin>
      <Insets bottom="20" left="20" right="20" top="20" />
   </VBox.margin>

   <Label fx:id="usernameText" text="username" textAlignment="CENTER" />

   <TextField fx:id="inputUsername" promptText="Username" />

   <Label fx:id="passwordText" text="password" textAlignment="CENTER" />

   <TextField fx:id="inputPassword" promptText="Password" />

   <Label fx:id="emailText" text="email" textAlignment="CENTER" />

   <TextField fx:id="inputEmail" promptText="email" />


   <Label fx:id="errorText" />

   <Button fx:id="registerButton" onAction="#onSignin" text="register" />
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>


</VBox>
